# i3 config file (v4)
# https://i3wm.org/docs/userguide.html

set $mod Mod4

include keymap.conf
include autostart.conf

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:NotoSans 11

# title_align center
title_align left
for_window [all] title_format "%title"
# for_window [all] title_format "%title [class:%class] [instance:%instance]"
for_window [all] title_window_icon padding 4px

# Sticky = appear in all workspaces floating
for_window [class="Pidgin"] sticky enable
for_window [class="Pidgin"] floating enable

for_window [class="1Password"] sticky enable
for_window [class="1Password"] floating enable

# for_window [class="TelegramDesktop"] sticky enable
for_window [class="TelegramDesktop"] floating enable

for_window [class="Pavucontrol"] floating enable
for_window [class="org.gnome.Nautilus"] floating enable
for_window [class="firefox" window_role="page-info"] floating enable

default_border normal

set $refresh_i3status killall -SIGUSR1 i3status

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# move tiling windows via drag & drop by left-clicking into the title bar,
# or left-clicking anywhere into the window while holding the floating modifier.
tiling_drag modifier titlebar

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# Automatically assign workspaces
assign [class="Pidgin"] $ws9
assign [class="obsidian"] $ws8

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	i3bar_command i3bar --transparency
  status_command i3status
	position top
	tray_output primary
	tray_padding 4 px
	font pango:SauceCodePro Nerd Font Bold 11
	# separator_symbol "â”‚"
	separator_symbol "  "
	workspace_buttons yes
	workspace_min_width 60 px
	strip_workspace_numbers no
	strip_workspace_name no
	binding_mode_indicator yes
	padding 0 4px

	# padding 0 60px
	# height 20

	colors {
    #                  border  backgr. text
		focused_workspace  #111111 #111111 #c53b53
		active_workspace   #333333 #5f676a #ffffff
		inactive_workspace #111111 #111111 #888888
		urgent_workspace   #2f343a #900000 #ffffff
		binding_mode       #2f343a #900000 #ffffff

		background #111111

		statusline #999999
		separator  #666666
	}
}

focus_follows_mouse no
mouse_warping output

